<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="systems.imsafe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".activities.UserSearchActivity"
            android:label=""/>

        <activity
            android:name=".activities.RegistrationActivity"
            android:label="Create your account" />

        <activity android:name=".activities.LoginActivity" />

        <activity
            android:name=".activities.ImageViewActivity"
            android:label="Decrypted Image" />

        <activity
            android:name=".activities.ImageListActivity"
            android:label="Encrypted Image List"
            android:theme="@style/NoActionBar" />

        <activity
            android:name=".activities.ImageEncryptionActivity"
            android:label="Encrypt an Image" />

    </application>

</manifest>